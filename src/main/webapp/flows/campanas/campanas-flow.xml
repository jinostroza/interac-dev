<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
      start-state="programarCampana">

    <on-start>
        <evaluate expression="MantenedorCampana.inicio()"/>
    </on-start>


    <!--si el id del estado se llama igual que el xhtml no es necesario especificar el view-->
    <!--pero eso es dato rosa, está bien definido-->
    <view-state id="programarCampana">
        <transition on="porg" to="agregarCampana">
            <evaluate expression="MantenedorCampana.inicio()"></evaluate>
        </transition>
    </view-state>

    <!--aca tienes definida una transicion que no la invoca tu vista, eso no implica qeu este malo-->
    <!--pero por lo visto es una transicion demas a menos que tengas pensado utilizarla despues -->
    <view-state id="agregarCampana" >
        <transition on="selPant" to="seleccionarContenido">
            <evaluate expression="mantenedorAnuncios.inicio()"></evaluate>
        </transition>

    </view-state>

    <!--mismo caso-->
    <view-state id="seleccionarContenido" >
                <transition on="regAnun" to="registraAnuncio" ></transition>
    </view-state>


    <view-state id="registraAnuncio">


    </view-state>

    <view-state id="finalizar">

    </view-state>
    <!-- acá tienes que verificar si efectivamente necesitas matar el flow, es sano matarlo pero -->
    <!-- si no lo haces spring igual lo hará por ti al cambiar de flow o contexto -->

</flow>