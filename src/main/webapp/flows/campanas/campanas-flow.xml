<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
             start-state="agregarCampana">

<on-start>
    <evaluate expression="mantenedorCampana.inicio()"/>
</on-start>



<view-state id="agregarCampana" view="agregarCampana.xhtml">
    <transition on="listar" to="listarCampanas"></transition>
</view-state>

    <view-state id="listarCampanas" view="listarCampanas.xhtml">
       <transition on="selPant" to="seleccionarPantalla"></transition>
    </view-state>

    <view-state id="seleccionarPantalla" view="seleccionarPantalla.xhtml">
        <transition on="pay" to="pagar" ></transition>

    </view-state>

    <end-state id="pagar"></end-state>


</flow>