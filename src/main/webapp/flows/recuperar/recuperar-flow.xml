<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
        start-state="recuperar">
      <on-start>
            <evaluate expression="mantenedorPerfil.inicio()"/>
      </on-start>

      <view-state id="recuperar">
            <transition on="next1" to="recuperarfin"></transition>
            <transition on="ingresoCodigo" to="recuperarclave"></transition>
      </view-state>

      <view-state id="recuperarclave">
            <transition on="siguiente" to="nuevaclave"></transition>
      </view-state>
      <view-state id="recuperarfin"></view-state>
      
</flow>