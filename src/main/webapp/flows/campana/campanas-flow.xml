<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
      start-state="registraCampana">
    <on-start>
        <evaluate expression="mantenedorCampana.inicio()"/>
    </on-start>

    <view-state id="crearcampana">
        <transition on="pasos" to="campanapasos"></transition>
    </view-state>

    <view-state id="campanapasos">
        <transition on="regisCamp" to="registraCampana"/>
    </view-state>


    <view-state id="registraCampana">
        <transition on="crear" to="subirContenido"/>
        <transition on="selectTotem" to="seleccionarTotem"/>
        <transition on="totems" to="inicioCliente"/>
    </view-state>

    <view-state id="inicioCliente">

    </view-state>
    <view-state id="subirContenido">
        <transition on="subir" to="seleccionarTotem"></transition>
    </view-state>

    <view-state id="seleccionarTotem">
        <transition on="regisCamp" to="registraCampana"/>
        <transition on="end1" to="campanaConfirmada"/>
    </view-state>

    <view-state id="campanaConfirmada">
        <transition on="fin2" to="registraCampana"></transition>
    </view-state>

</flow>