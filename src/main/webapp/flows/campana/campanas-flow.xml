<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
      start-state="crearcampana">
      <on-start>
            <evaluate expression="mantenedorContenido.inicio()"/>
      </on-start>
      <view-state id="crearcampana">

      </view-state>
      <view-state id="campanapasos" view="campanapasos.xhtml">
            <transition on="reg" to="registraCampana">

            </transition>
            <transition on="next2" to="seleccionarTotem">
                  <evaluate expression="mantenedorCategoria.inicio()"/>
                  <evaluate expression="mantenedorTotems.inicio()"/>
            </transition>
            <transition on="next3" to="planificar-pasadas">

            </transition>
      </view-state>


    <view-state id="registraCampana" view="registraCampana.xhtml">
          <transition on="next1" to="seleccionarTotem"> </transition>

    </view-state>
      <view-state id="seleccionarTotem" view="seleccionarTotem.xhtml">

      </view-state>
      <view-state id="planificar-pasadas" view="planificar-pasadas.xhtml">
            <transition on="reg" to="registraCampana">

            </transition>
            <transition on="next2" to="seleccionarTotem">
                  <evaluate expression="mantenedorCategoria.inicio()"/>
                  <evaluate expression="mantenedorTotems.inicio()"/>
            </transition>
            <transition on="next3" to="planificar-pasadas">

            </transition>
      </view-state>

</flow>